{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,

    "include": [
			"~/.config/waybar/modul.jsonc"
		],

    "modules-left": [
			"custom/appmenu",
			"clock",
			"hyprland/workspaces"
		],
		
    "modules-center": [
				"custom/media"
		],
		
    "modules-right": [
			"tray",	
			"group/monitor", 
			"group/control",
			"group/session",
		],

		// group monitor
		"group/monitor": {
			"orientation": "horizontal",
			"modules":[
				"network",
				"temperature",
				"cpu",
				"memory",
				"battery"
			]
		},

		// group control
		"group/control": {
			"orientation": "horizontal",
			"modules":[
				"power-profiles-daemon",
				"backlight",
				"bluetooth",
				"pulseaudio",
				"pulseaudio#microphone"
			]
		},


		// Group Exit
		"group/session": {
			"orientation": "horizontal",
			"modules": [
				"custom/sessions"
			]
		}
}
